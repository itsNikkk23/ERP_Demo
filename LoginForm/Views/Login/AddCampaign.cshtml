@model LoginForm.Models.campaign

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Create Campaign</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border-radius: 15px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.2rem rgba(25,135,84,.25);
        }

        .highlight {
            background-color: #e7fbe7;
        }

        .btn-primary {
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #145c2d;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <h2 class="mb-4 text-center">Create Campaign</h2>
                    <form asp-action="AddCampaign" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campaign Name -->
                        <div class="mb-3">
                            <label asp-for="campaign_name" class="form-label">Campaign Name</label>
                            <input asp-for="campaign_name" class="form-control" onfocus="highlightField(this)" onblur="removeHighlight(this)" />
                        </div>

                        <!-- Campaign Type -->
                        <div class="mb-3">
                            <label asp-for="campaign_type" class="form-label">Campaign Type</label>
                            <input asp-for="campaign_type" class="form-control" onfocus="highlightField(this)" onblur="removeHighlight(this)" />
                        </div>

                        <!-- Start Date -->
                        <div class="mb-3">
                            <label asp-for="start_date" class="form-label">Start Date</label>
                            <input asp-for="start_date" class="form-control" type="date" onfocus="highlightField(this)" onblur="removeHighlight(this)" />
                        </div>

                        <!-- End Date -->
                        <div class="mb-3">
                            <label asp-for="end_date" class="form-label">End Date</label>
                            <input asp-for="end_date" class="form-control" type="date" onfocus="highlightField(this)" onblur="removeHighlight(this)" />
                        </div>

                        <!-- Campaign Image -->
                        <div class="mb-3">
                            <label asp-for="campaignIMG" class="form-label">Upload Campaign Image</label>
                            <input type="file" asp-for="campaignIMG" multiple class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="discount" class="form-label">Discoount</label>
                            <input asp-for="discount" class="form-control" onfocus="highlightField(this)" onblur="removeHighlight(this)" />
                        </div>



                        <!-- Submit -->
                        <div class="text-center">
                            <input type="submit" value="Create" class="btn btn-primary px-4 py-2" onmouseover="onHoverSubmitButton(this)" onmouseout="onLeaveSubmitButton(this)" />
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="DispCampaign" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function highlightField(field) {
            field.classList.add("highlight");
        }

        function removeHighlight(field) {
            field.classList.remove("highlight");
        }

        function onHoverSubmitButton(button) {
            button.style.transform = "scale(1.05)";
        }

        function onLeaveSubmitButton(button) {
            button.style.transform = "scale(1)";
        }
    </script>
</body>
</html>
