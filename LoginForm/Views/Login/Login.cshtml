@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saree Store - Product Entry</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#067ba1] min-h-screen flex items-center justify-center p-4">
    <form class="bg-white rounded-lg p-8 w-full max-w-md" asp-action="Login" method="post" novalidate>
        <h2 class="text-center text-gray-600 text-lg mb-6 font-normal">Login</h2>

        <label for="email" class="block text-xs text-gray-700 mb-1">Email:</label>
        <input id="email"
               name="Email"
               type="text"
               placeholder="User name / Email"
               class="w-full border border-gray-300 rounded-sm px-4 py-3 mb-4 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#067ba1]"
               required />

        <label for="password" class="block text-xs text-gray-700 mb-1">Password:</label>
        <input id="password"
               name="Password"
               type="password"
               placeholder="Password"
               class="w-full border border-gray-300 rounded-sm px-4 py-3 mb-1 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#067ba1]"
               required />

        <div class="mb-4 text-xs text-gray-700">
            <label class="inline-flex items-center">
                <input type="checkbox" class="form-checkbox h-3 w-3 text-[#067ba1]" />
                <span class="ml-1">Show Password</span>
            </label>
        </div>

        <button type="submit"
                class="w-full bg-[#067ba1] text-white text-xs font-semibold py-3 rounded-sm mb-6 hover:bg-[#055f7a] transition-colors">
            SIGN IN
        </button>

        <p class="text-center text-xs text-gray-700 mb-1">
            Forgot
            <a href="#" class="text-[#067ba1] hover:underline">Username / Password?</a>
        </p>
        <p class="text-center text-xs text-gray-700">
            Don't have an account?
            <a href="#" class="text-[#067ba1] hover:underline">Sign up</a>
        </p>

        <h1 class="text-center text-sm text-red-600 mt-4">@ViewData["role"]</h1>
    </form>
</body>
</html>
