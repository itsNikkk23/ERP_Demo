@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saree Store - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .form-container {
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            transition: transform 0.3s ease;
        }

        .input-field:focus {
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
        }

        @@media (max-width: 640px) {
            .form-container {
                padding: 1.5rem;
                width: 100%;
                margin: 0 1rem;
            }
        }

        @@media (max-width: 480px) {
            .form-container {
                padding: 1.25rem;
            }
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4 bg-white">
    <form class="form-container bg-white rounded-lg p-6 sm:p-8 w-full max-w-sm sm:max-w-md border border-gray-200"
          asp-action="Login" method="post" novalidate>

        <h2 class="text-center text-gray-800 text-xl sm:text-2xl mb-6 font-bold">Login</h2>

        <div class="space-y-4">
            <div>
                <label for="email" class="block text-sm text-gray-700 mb-1 font-medium">Email Address</label>
                <input id="email"
                       name="Email"
                       type="text"
                       placeholder="User name / Email"
                       class="input-field w-full bg-gray-50 border border-gray-300 rounded-md px-3 py-2 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900"
                       required />
            </div>

            <div>
                <label for="password" class="block text-sm text-gray-700 mb-1 font-medium">Password</label>
                <input id="password"
                       name="Password"
                       type="password"
                       placeholder="Password"
                       class="input-field w-full bg-gray-50 border border-gray-300 rounded-md px-3 py-2 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900"
                       required />
            </div>

            <div class="flex items-center">
                <label class="inline-flex items-center">
                    <input type="checkbox" class="form-checkbox h-4 w-4 text-blue-500 rounded" id="showPassword" />
                    <span class="ml-2 text-sm text-gray-600">Show Password</span>
                </label>
            </div>

            <button type="submit"
                    class="w-full bg-[#5ba7a8] text-white font-medium py-2 rounded-md hover:bg-[#16c453] focus:ring-2 focus:ring-blue-400 focus:outline-none mt-2">
                SIGN IN
            </button>

            <div class="text-center mt-4 space-y-2">
                <p class="text-sm text-gray-600">
                    Forgot
                    <a href="#" class="text-blue-600 hover:underline">Username / Password?</a>
                </p>
                <p class="text-sm text-gray-600">
                    Don't have an account?
                    <a href="#" class="text-blue-600 hover:underline">Sign up</a>
                </p>
            </div>
        </div>

        <h1 class="text-center text-sm text-red-600 mt-4">@ViewData["role"]</h1>
    </form>

    <script>
        // Show/hide password functionality
        document.getElementById('showPassword').addEventListener('change', function() {
            const passwordField = document.getElementById('password');
            passwordField.type = this.checked ? 'text' : 'password';
        });

        // Add responsive adjustments for mobile devices
        function adjustForMobile() {
            const width = window.innerWidth;
            const form = document.querySelector('.form-container');

            if (width < 480) {
                // Extra small screens
                form.classList.add('px-4');
            } else {
                form.classList.remove('px-4');
            }
        }

        // Run on load and resize
        window.addEventListener('load', adjustForMobile);
        window.addEventListener('resize', adjustForMobile);
    </script>
</body>
</html>