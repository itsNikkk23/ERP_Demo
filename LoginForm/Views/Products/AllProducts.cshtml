    .wishlist-checkbox {
        display: none;
    }

    .heart-icon {
        width: 24px;
        height: 24px;
        fill: white;
        stroke: black;
        stroke-width: 2;
        transition: fill 0.3s ease-in-out, stroke 0.3s ease-in-out;
    }

    /* Change heart color when checkbox is checked */
    .wishlist-checkbox:checked + .heart-icon {
        fill: red;
        stroke: red;
    }

