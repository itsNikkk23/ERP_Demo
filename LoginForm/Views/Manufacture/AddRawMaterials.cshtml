<h2>Add Raw Material</h2>

<form method="post" asp-action="AddRawMaterials" asp-controller="Manufacture" class="custom-form">
    <div class="form-group">
        <label for="MaterialName">Material Name:</label>
        <input type="text" name="MaterialName" id="MaterialName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="MaterialType">Material Type:</label>
        <input type="text" name="MaterialType" id="MaterialType" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="UnitOfMeasure">Unit of Measure:</label>
        <input type="number" name="UnitOfMeasure" id="UnitOfMeasure" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" name="Description" id="Description" class="form-control" required />
    </div>

    <div class="form-group d-flex gap-2">
        <button type="submit" class="btn btn-primary">Add Material</button>
        <a asp-action="ViewRawMaterials" asp-controller="Manufacture" class="btn btn-secondary">Cancel</a>
    </div>
</form>