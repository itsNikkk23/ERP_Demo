@model List<LoginForm.Models.RawMaterials>

<table class="table">
    <thead>
        <tr>
            <th>Material ID</th>
            <th>Material Name</th>
            <th>Material Type</th>
            <th>Unit Of Measure</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.RawMaterialID</td>
                <td>@material.MaterialName</td>
                <td>@material.MaterialType</td>
                <td>@material.UnitOfMeasure</td>
                <td>@material.Description</td>
                <td>
                    <a asp-controller="Manufacture" asp-action="EditRawMaterials" asp-route-id="@material.RawMaterialID" class="btn btn-primary">Edit</a>

                    <form asp-controller="Manufacture" asp-action="DeleteRawMaterials" asp-route-id="@material.RawMaterialID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this material?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
