@model ERP.Models.Production

@{
    ViewData["Title"] = "Add Production";
}

<link rel="stylesheet" href="~/css/from.css" />

<form asp-action="AddProduction" asp-controller="Manufacture" method="post" class="custom-form">
    <div class="form-group">
        <label asp-for="productattributeid">Product Attribute</label>
        <select asp-for="productattributeid" class="form-control" asp-items="ViewBag.productAttributeList" required>
            <option value="">-- Select Product Attribute --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ProductionDate">Production Date</label>
        <input asp-for="ProductionDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="MachineUsed">Machine Used</label>
        <input asp-for="MachineUsed" type="text" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EmployeeID">Employee</label>
        <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.employeeList" required>
            <option value="">-- Select Employee --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="RawMaterialID">Raw Material</label>
        <select asp-for="RawMaterialID" class="form-control" asp-items="ViewBag.rawMaterialsList" required>
            <option value="">-- Select Raw Material --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Production</button>
    <a asp-action="ViewProduction" asp-controller="Manufacture" class="btn btn-secondary">Cancel</a>
</form>
