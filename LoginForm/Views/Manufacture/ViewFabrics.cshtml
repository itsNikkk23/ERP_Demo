@model List<LoginForm.Models.Fabrics>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table">
    <thead>
        <tr>
            <th>FabricID</th>
            <th>FabricName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fabrics in Model)
        {
            <tr>
              
           
                <td>@fabrics.FabricID</td>
                <td>@fabrics.FabricName</td>
                <td>
                    <a asp-controller="Manufacture" asp-action="EditFabric" asp-route-id="@fabrics.FabricID" class="btn btn-primary">Edit</a>
                    <form asp-controller="Manufacture" asp-action="DelFabric" asp-route-id="@fabrics.FabricID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this color?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
