@model LoginForm.Models.employee_attendence

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Attendance Card</title>
    <style>
        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
        }



        .card {
        width: 40%;
        max-width: 90%;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        }

        .card h2 {
        font-size: 1.2rem;
        color: #333;
        }

        .card p {
        font-size: 0.9rem;
        color: #666;
        margin: 5px 0;
        }

        .punch-btn {
        display: block;
        margin: 15px auto;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
        }

        .punch-btn:hover {
        background-color: #0056b3;
        }

        @@media (max-width: 480px) {
        .card

        {
        width: 90%;
        padding: 15px;
        }

        .card h2 {
        font-size: 1rem;
        }

        .card p {
        font-size: 0.8rem;
        }

        .punch-btn {
        font-size: 0.9rem;
        padding: 8px 12px;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <h2>Hi, @Context.Session.GetString("Name")</h2>
            <p><strong>Attendance Date:</strong>@Model.Date.ToString("dd-MM-yyyy")</p>
            @if(@Model.Status == "Absent")
            {
                <p><strong>In Time:</strong> --</p>
                <p><strong>Out Time:</strong>--</p>

                <div class="row">
                    <div class="col col-7 text-center ">
                        <h3>@Model.Status</h3>

                    </div>
                    <div class="col col-3 justify-content-center">
                        <button class="punch-btn">
                            <a asp-action="UpdateAttendence" asp-route-id="@Model.EmployeeID" class="text-light">Punch</a>
                        </button>

                    </div>
                </div>
            }
            else if(@Model.Status == "punch in")
            {
                <p><strong>In Time:</strong> @Model.ShiftStart</p>
                <p><strong>Out Time:</strong>--</p>

                <div class="row">
                    <div class="col col-7 text-center ">
                        <h3>@Model.Status</h3>

                    </div>
                    <div class="col col-3 justify-content-center">
                        <button class="punch-btn">
                            <a asp-action="UpdateAttendence" asp-route-id="@Model.EmployeeID" class="text-light">Punch</a>
                        </button>

                    </div>
                </div>

            }
            else
            {
                <p><strong>In Time:</strong> @Model.ShiftStart</p>
                <p><strong>Out Time:</strong>@Model.ShiftEnd</p>
                <div class="row">
                    <div class="col col-7 text-center ">
                        <h3>@Model.Status</h3>

                    </div>
                   
                </div>
                
            }

        </div>

        </div>
    </body>
</html>

