@model List<ERP.Models.FAQ>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ Page</title>
    <!-- Bootstrap CSS -->
    <!-- Bootstrap CSS (should be already included) -->
   @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@

    <!-- Bootstrap JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add New Faq
    </button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="FAQ" method="post">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Faq's</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <h3 class="form-label" style="color:black;font-family: 'Arial Narrow Bold'">Questions </h3>
                            <input type="text" class="form-control" placeholder="Enter Question" name="Questions">
                        </div>
                        <div class="mb-3">
                            <h3 class="form-label" style="color:black;font-family: 'Arial Narrow Bold'">Answser </h3>
                            <textarea rows="3" cols="60" class="form-control" placeholder="Add Your Anwser Of Above Question" name="Answers"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-end">

                        <button type="submit" class="btn btn-success">Add Faq</button>

                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="container my-4">
        <h1 class="text-center mb-4">Frequently Asked Questions</h1>
        <div class="accordion" id="faqAccordion">
            @foreach (var Faq in Model)
            {
                var uniqueId = Guid.NewGuid().ToString("N");
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading_@uniqueId">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@uniqueId" aria-expanded="false" aria-controls="collapse_@uniqueId">
                            @Faq.Questions
                        </button>
                    </h2>
                    <div id="collapse_@uniqueId" class="accordion-collapse collapse" aria-labelledby="heading_@uniqueId">
                        <div class="accordion-body">
                            @Faq.Answers
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

  
</body>
</html>
