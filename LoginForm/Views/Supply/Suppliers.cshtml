@{
}
@model List<ERP.Models.Suppliers>

<h2>Supplier List</h2>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Supplier ID</th>
            <th>Supplier Name</th>
            <th>Supplier Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.SupplierID</td>
                <td>@supplier.SupplierName</td>
                <td>@supplier.SupplierContact</td>
                <td>
                    <a asp-controller="Supply" asp-action="EditSuppliers" asp-route-id="@supplier.SupplierID" class="btn btn-primary">Edit</a>

                    <form asp-controller="Supply" asp-action="DeleteSupplier" asp-route-id="@supplier.SupplierID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this supplier?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Supply" asp-action="AddSupplier" class="btn btn-success">Add New Supplier</a>
