@model List<LoginForm.Models.ProductView>

@{
    Layout = "~/Views/Shared/Userlayout.cshtml";
    ViewData["Title"] = "Product Listing";
}

<h2 class="mb-4 text-center">Product Listing</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 col-12 py-3">
                <div class="card h-100 shadow-sm">
                    <div class="position-relative">
                        <img src="@item.ImagePath" alt="Product Image"
                             class="card-img-top"
                             style="height: 200px; object-fit: contain; padding: 10px; border-bottom: 1px solid #ddd;" />
                        <a href="#" class="quick-view-btn btn btn-sm btn-light position-absolute top-0 end-0 m-2"
                           onclick="showQuickView(this)">Quick View</a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Product.ProductName</h5>
                        <p class="card-text"><strong>Ratings:</strong> @item.Product.ProductRatings</p>
                        <p class="card-text"><strong>Price:</strong> ₹@item.Product.Price</p>
                        <p class="card-text"><strong>Description:</strong> @item.Product.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="EditProduct" asp-controller="Supply" asp-route-id="@item.Product.productid"
                           class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteProduct" asp-controller="Supply" asp-route-id="@item.Product.productid"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Optional Quick View Modal (Optional - if you want to keep it for admin too) -->
<div class="modal fade" id="quickViewModal" tabindex="-1" aria-labelledby="quickViewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickViewModalLabel">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <img id="modalProductImage" src="" class="img-fluid" alt="Product Image">
                    </div>
                    <div class="col-md-6">
                        <h4 id="modalProductName"></h4>
                        <p id="modalProductDescription"></p>
                        <p class="price">
                            ₹<span id="modalProductPrice"></span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showQuickView(element) {
            var card = $(element).closest('.card');
            var imgSrc = card.find('img').attr('src');
            var name = card.find('.card-title').text();
            var description = card.find('.card-text').eq(2).text();
            var price = card.find('.card-text').eq(1).text().replace('Price:', '').trim();

            $("#modalProductImage").attr("src", imgSrc);
            $("#modalProductName").text(name);
            $("#modalProductPrice").text(price);
            $("#modalProductDescription").text(description);

            $("#quickViewModal").modal("show");
        }
    </script>
}
