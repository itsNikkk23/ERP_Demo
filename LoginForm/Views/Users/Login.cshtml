@model ERP.Models.Customers;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background: url('https://source.unsplash.com/1600x900/?city,night') no-repeat center center fixed;
            background-size: cover;
        }

        .form-container {
            max-width: 400px;
            margin: 80px auto;
            /* background: #50b2a4; */
            /* background: #7eccc1; */
            /* background: #a8ddd5; */
            /* background: #5fa8ad; */
            /* background: #66a9b5; */
            /* background: #52a09e; */
            /* gradientPercent: 52.5%; */
            /* background-color: #00192F; */
            /* background: linear-gradient(to bottom,#00192F,#52a09e); */
            background: linear-gradient(to bottom,#306867,#52a09e);
            /* background: #019099; */
            padding: 30px;
            border-radius: 10px;
            color: #50b2a4;
        }

            .form-container input {
                background: rgba(255, 255,255, 0.4);
                border: none;
                /* border-color: #50b2a4; */
                color: white
            }

                .form-container input::placeholder {
                    color: floralwhite;
                    /* color: #50b2a4; */
                    font-size: 16px;
                }

            .form-container .btn-custom {
                /* background-color: #fbc02d; */
                background-color: #d4a00f;
                color: white;
            }

                .form-container .btn-custom:hover {
                    background-color: #d4a00f;
                }

        .toggle-btns {
            display: flex;
            justify-content: space-between;
        }

            .toggle-btns button {
                width: 50%;
                background: transparent;
                border: none;
                font-weight: bold;
                padding: 10px;
                cursor: pointer;
                color: white;
            }

                .toggle-btns button.active {
                    /* background: #fbc02d; */
                    /* background: #f4d03f; */
                    /* background: #A1BE95; */
                    /* background: #7da56c; */
                    background: #2f8287;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="toggle-btns">
                <button id="btnSignup">SIGN UP</button>
                <button id="btnLogin" class=" active">LOG IN</button>
            </div>
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <!-- Sign-Up Form -->
            <form id="signupForm" action="Index" method="post" style="display: none;" onsubmit="return validateForm();">
                <h3 class="text-center text-black my-3">SIGN UP </h3>
                <div class="row mb-3">
                    <div class="col">
                        <input type="text" id="firstName" class="form-control" asp-for="firstName" placeholder="First Name">
                    </div>
                    <div class="col">
                        <input type="text" id="lastName" class="form-control" asp-for="lastName" placeholder="Last Name">
                    </div>
                </div>
                <div class="mt-2">
                    <input type="email" id="email" class="form-control" asp-for="email" placeholder="Email">
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="mt-2">
                    <input type="tel" id="phone" class="form-control" asp-for="phone" placeholder="Phone">

                </div>
                <div class="mt-2">
                    <input type="password" id="password" class="form-control" asp-for="password" placeholder="Password">

                </div>
                <div class="mt-2">
                    <input type="password" id="confirmPassword" asp-for="confirmPassword" class="form-control" placeholder="confirmPassword">

                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-custom w-100" onclick="ChkUser()">SIGN UP</button>
                </div>

            </form>
            <!--Validate Register Form-->
            @section Scripts {
                <script src="~/js/Register.js"></script>
            }
            <!-- Log-In Form (Initially Hidden) -->
            <form id="loginForm" action="Login" method="post" onsubmit="return validateLoginForm();">
                <h3 class="text-center text-black my-3">LOG IN</h3>
                <div class="mt-2">
                    <input type="email" class="form-control" id="emailL" asp-for="email" placeholder="Email">
                </div>
                <div class="mt-2">
                    <input type="password" class="form-control" id="pass" asp-for="password" placeholder="Password">

                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-custom w-100">LOG IN</button>
                </div>

                @if (TempData["UniqEmail"] != null)
                {
                    <p class="text-black">@TempData["UniqEmail"]</p>
                }
            </form>
        </div>
    </div>

    <script>

       
        // $(document).ready(function () {
        //     $("#btnSignup").click(function () {
        //         $("#signupForm").show();
        //         $("#loginForm").hide();
        //         $(this).addClass("active");
        //         $("#btnLogin").removeClass("active");
        //     });

        //     $("#btnLogin").click(function () {
        //         $("#signupForm").hide();
        //         $("#loginForm").show();
        //         $(this).addClass("active");
        //         $("#btnSignup").removeClass("active");
        //     });
        // });
        $(document).ready(function () {


            $("#btnLogin").click(function () {
                $("#signupForm").hide();
                $("#loginForm").show();
                $(this).addClass("active");
                $("#btnSignup").removeClass("active");
            });
             $("#btnSignup").click(function () {
                $("#signupForm").show();
                $("#loginForm").hide();
                $(this).addClass("active");
                $("#btnLogin").removeClass("active");
            });
        });
    </script>
</body>
</html>
