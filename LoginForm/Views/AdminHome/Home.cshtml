<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saree ERP Admin Dashboard</title>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container-fluid my-4">
        <h2 class="text-center mb-4">Saree Manufacturer Admin Dashboard</h2>

        <!-- Summary Cards -->
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5>Today’s Orders</h5>
                        <p class="fs-4 text-primary">38</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5>Sarees in Stock</h5>
                        <p class="fs-4 text-success">1,200</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5>Designs in Production</h5>
                        <p class="fs-4 text-warning">5</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5>Pending Deliveries</h5>
                        <p class="fs-4 text-danger">12</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-center">Monthly Sales Revenue</h5>
                        <canvas id="salesLineChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-center">Fabric-wise Sales</h5>
                        <canvas id="fabricPieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Insights -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-center">Top Selling Designs</h5>
                        <canvas id="designBarChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Low Stock Sarees</h5>
                        <ul class="list-group">
                            <li class="list-group-item">Kanchipuram Silk – 5 left</li>
                            <li class="list-group-item">Cotton Banarasi – 2 left</li>
                            <li class="list-group-item">Chiffon Printed – 8 left</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & ChartJS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Monthly Sales Revenue - Line Chart
        new Chart(document.getElementById('salesLineChart'), {
          type: 'line',
          data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            datasets: [{
              label: 'Revenue in ₹',
              data: [32000, 45000, 39000, 52000, 61000],
              borderColor: '#4e73df',
              backgroundColor: 'rgba(78, 115, 223, 0.1)',
              tension: 0.3,
              fill: true
            }]
          }
        });

        // Fabric-wise Sales - Pie Chart
        new Chart(document.getElementById('fabricPieChart'), {
          type: 'pie',
          data: {
            labels: ['Cotton', 'Silk', 'Georgette', 'Chiffon'],
            datasets: [{
              data: [350, 200, 150, 100],
              backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#8E44AD']
            }]
          }
        });

        // Top Selling Designs - Bar Chart
        new Chart(document.getElementById('designBarChart'), {
          type: 'bar',
          data: {
            labels: ['Floral Zari', 'Temple Border', 'Digital Print', 'Plain Weave'],
            datasets: [{
              label: 'Units Sold',
              data: [120, 90, 110, 70],
              backgroundColor: '#28a745'
            }]
          }
        });
    </script>
</body>
</html>
