
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    @* <link rel="stylesheet" href="~/css/AdminPanel.css" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        /* ====== SIDEBAR ====== */
        #menu-toggle {
        display: none;
        }

        .sidebar {
        position: fixed;
        top: 0;
        left: -300px;
        width: 300px;
        height: 100%;
        background-color: floralwhite;
        color: navy;
        overflow-y: auto;
        transition: left 0.05s ease-in-out;
        box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.2);
        z-index: 1001;
        }

        .sidebar .menu a:hover {
        background-color: lightblue;
        }

        .sidebar-header {
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        background-color: darkblue;
        text-align: center;
        }

        .menu {
        padding: 10px;
        }

        .menu h3 {
        margin-top: 20px;
        margin-bottom: 5px;
        font-size: 16px;
        font-weight: bold;
        }

        .menu a {
        display: block;
        padding: 10px;
        text-decoration: none;
        color: navy;
        font-size: 14px;
        transition: background 0.3s;
        }

        .menu a:hover {
        background-color: rgba(255, 255, 255, 0.2);
        }

        /* Open Button */
        .open-btn {
        background: none;
        border: none;
        color: black;
        font-size: 18px;
        cursor: pointer;
        }

        /* Close Button */
        .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        }

        /* Dark overlay */
        .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease-in-out;
        z-index: 1000;
        }

        /* Toggle sidebar and overlay when checkbox is checked */
        #menu-toggle:checked ~ .sidebar {
        left: 0;
        }

        #menu-toggle:checked ~ .overlay {
        opacity: 1;
        visibility: visible;
        }

        body {

        /*    background-color: #e0a3e2*/
        /* background-color:floralwhite; */
        background-color: #E6E6FA
        /* background: linear-gradient(to bottom, #E6E6FA, #FFFFFF); */


        }

    </style>
</head>
<body>
    <div>
        <input type="checkbox" id="menu-toggle">
        <label for="menu-toggle" class="overlay"></label>

        <!-- ====== NAVBAR (New) ====== -->
        <div class="navbar">
            <label for="menu-toggle" class="open-btn">☰ MENU</label>

        </div>
       
 
        @switch (@Context.Session.GetString("role"))
        {
            case "1":
                <div class="sidebar" style="background-color:floralwhite">
                    <label for="menu-toggle" class="close-btn">&times;</label>
                    <div class="sidebar-header">

                        <h4 class="text-center text-light">WeaveWonder</h4>
                    </div>
                    <div class="menu">
                        <h1>@ViewData["role"]</h1>

                        <a asp-controller="AdminHome" asp-action="Home"><i class="fa-solid fa-industry"></i> Dashboard</a>
                        <a asp-controller="AdminHome" asp-action="DispHandlooms"><i class="fa-solid fa-industry"></i> HandLoom</a>
                        <a asp-controller="Orders" asp-action="Display"><i class="fa-solid fa-tags"></i> Orders</a>
                      
                        <a asp-controller="Products" asp-action="DisplayProducts"><i class="fa-solid fa-gears"></i> Products</a>

                        <hr class="bg-light" />

                        <a asp-controller="Customers" asp-action="DisplayCustomers"><i class="fa-solid fa-gears"></i> Customers</a>

                        <hr class="bg-light" />
                        <h2>Admin Handle</h2>
                        <a asp-controller="employee" asp-action="Index"><i class="fa-solid fa-gears"></i> Employees</a>
                        <a asp-controller="employee" asp-action="DisplayDept"><i class="fa-solid fa-gears"></i> Departments</a>
                        <a asp-controller="employee" asp-action="DisplayRole"><i class="fa-solid fa-gears"></i> Roles</a>

                        <hr class="bg-light" /> 

                        <a asp-controller="EmpServices" asp-action="DispFaq"><i class="fa-solid fa-gears"></i> FAQ's'</a>
                        <a asp-controller="EmpServices" asp-action="AddLeaveRequests"><i class="fa-solid fa-gears"></i>Apply Leave </a>
                        <a asp-controller="EmpServices" asp-action="DisplayLeaveRequests"><i class="fa-solid fa-gears"></i>Leave Requests</a>
                        <a asp-controller="EmpServices" asp-action="GetTodayAttendence"><i class="fa-solid fa-gears"></i>Attendence</a>
                        <a asp-controller="EmpServices" asp-action="PunchHistory"><i class="fa-solid fa-gears"></i>PunchHistory</a>
                        <a asp-controller="EmpServices" asp-action="Payroll"><i class="fa-solid fa-gears"></i>Payroll</a>

                        <hr class="bg-light" />
                        <a asp-controller="Login" asp-action="AddCampaign"><i class="fa-solid fa-right-from-bracket"></i> Add Campaign</a>
                        <a asp-controller="Login" asp-action="DispCampaign"><i class="fa-solid fa-right-from-bracket"></i> Display Campaign</a>

                        <hr class="bg-light" />


                        <a asp-controller="Login" asp-action="Login"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                    </div>
                </div>

                break;
            case "2":
                <div class="sidebar" style="background-color:floralwhite">
                    <label for="menu-toggle" class="close-btn">&times;</label>
                    <div class="sidebar-header">

                        <h4 class="text-center text-light">WeaveWonder</h4>
                        <h4 text-light>Employees Of Sales </h4>
                    </div>
                    <div class="menu">


                        <a asp-controller="AdminHome" asp-action="Home"><i class="fa-solid fa-industry"></i> Dashboard</a>
                        <a asp-controller="Orders" asp-action="Display"><i class="fa-solid fa-tags"></i> Orders</a>
                        <a asp-controller="Stores" asp-action="DisplayStores"><i class="fa-solid fa-box"></i> Stores</a>
                        <a asp-controller="Products" asp-action="DisplayProducts"><i class="fa-solid fa-gears"></i> Products</a>

                        <hr class="bg-light" />

                        <a asp-controller="Customers" asp-action="DisplayCustomers"><i class="fa-solid fa-gears"></i> Customers</a>

                        <hr class="bg-light" />
                        <a asp-controller="Login" asp-action="Login"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                    </div>
                </div>
                break;
            case "3":
                 <div class="sidebar" style="background-color:floralwhite">
                <label for="menu-toggle" class="close-btn">&times;</label>
                <div class="sidebar-header">

                    <h4 class="text-center text-light">WeaveWonder</h4>
                    <h4>Employees Of Purchase </h4>
                </div>
                <div class="menu">

                   
                    <a asp-controller="Stores" asp-action="DisplayStores"><i class="fa-solid fa-box"></i> Stores</a>
                   
                    <hr class="bg-light" />


                        <a asp-controller="Login" asp-action="Login"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                </div>
            </div>
                break;
            default:
                break;
        }
      

    </div>
    
    @* Main Content Area *@
    <div class="content">
       

        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>