@* AdminPanel.cshtml Layout *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<style>
    /* Custom Scrollbar */
    .sidebar-scroll::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar-scroll::-webkit-scrollbar-track {
        background: #4a9192;
    }

    .sidebar-scroll::-webkit-scrollbar-thumb {
        background: #3a7273;
        border-radius: 3px;
    }
    /* Sidebar positioning */
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 16rem; /* 64 */
        z-index: 50;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
    }

    .sidebar-open .sidebar {
        transform: translateX(0);
    }

    @@media (min-width: 768px) {
        .sidebar {
            transform: translateX(0);
        }
    }
    /* Overlay for mobile */
    .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.3);
        z-index: 40;
    }

    .sidebar-open .sidebar-overlay {
        display: block;
    }
    /* Icon rotation */
    .rotate-90 {
        transform: rotate(90deg);
    }

    .transition-transform {
        transition: transform 0.2s;
    }
</style>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="flex flex-col md:flex-row min-h-screen">
        <!-- Sidebar -->
        <div class="bg-[#5ba7a8] text-white w-full md:w-64 min-h-screen overflow-y-auto fixed">
            <div class="flex items-center justify-center h-16 border-b border-gray-800">
                <img src="https://storage.googleapis.com/a1aa/image/kaZnImMwEwVyj1Br4D84VKEpHwTdxx98uUckZILpDFw.jpg" alt="Logo" class="h-8 w-8 mr-2" />
